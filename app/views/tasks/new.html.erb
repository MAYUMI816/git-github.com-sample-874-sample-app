      <%= f.label :description, class: "label-form" %>  <!-- <label class="label-form" for="task_description">詳細</label> -->
      <%= f.text_area :description, rows:5, class: "form-control" %>  <!-- <textarea rows="5" class="form-control" name="task[description]"></textarea> -->
      
      <%= f.submit "新規登録", class: "btn btn-lg btn-primary btn-form" %> <!-- <input type="submit" name="commit" value="新規登録" class="btn btn-lg btn-primary btn-form" data-disable-with="新規登録"> -->
    <% end %>
  </div>  
</div>

      
      
      