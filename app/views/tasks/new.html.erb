<% provide(:title, 'New Task') %>
      
<h1>タスク新規作成</h1>

<div class="row">
  <div class="col-md-8 col-md-offset-2">
      <%= form_with(model: @task, url: user_tasks_path(@user), local: true) do |f| %>
      <%= render partial: 'shared/error_messages', locals: { obj: @task } %>
      <!-- <input type="hidden" name="authenticity_token" value="y3C/4dE/t+ZY3D2F5UP8q5BGjLp7KJLT54hjbYnyWBFKy/+TkQ6WB0SmMSfBTseqwvrERqjcz+lrZQGuRzf4LQ=="> -->
      
      <%= f.label :name, class: "label-form" %> <!-- <label class="label-form" for="task_name">名称</label> -->
