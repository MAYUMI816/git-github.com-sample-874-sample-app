<% provide(:title, 'Edit Task') %>

<h1>タスク編集</h1>

<div class="row">
  <div class="col-md-8 col-md-offset-2">

      <%= form_with(model: @task, url: user_tasks_path(@user,@task), local: true, method: :patch) do |f| %>  
      <%= render partial: 'shared/error_messages', locals: { obj: @task } %>
      
      <%= f.label :名称, class: "label-form" %><!-- <label class="label-form" for="task_name">名称</label> -->
      <%= f.text_field :name, class: "form-control" %><!-- <input class="form-control" type="text" value="あああああ" name="task[name]"> -->

      <%= f.label :description, class: "label-form" %><!-- <label class="label-form" for="task_description">詳細</label> -->
      <%= f.text_area :description, rows:5, class: "form-control" %> <!--<textarea rows="5" class="form-control" name="task[description]">あああああau</textarea> -->

      <%= f.submit "更新", class: "btn btn-primary btn-form" %>
      <!-- <input type="submit" name="commit" value="更新" class="btn btn-primary btn-form" data-disable-with="更新"> -->
      <%= link_to "キャンセル", user_tasks_path(@user), class: "btn btn-default btn-form" %>
      <!-- <a class="btn btn-default btn-form" href="/users/1/tasks">キャンセル</a>-->
      <% end %>
 </div>
</div>



      
   
