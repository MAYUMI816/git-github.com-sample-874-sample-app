<!-- 8. 1. 1 少し発展的なパーシャルの使い方 -->
<%= form_with(model: @user, local: true) do |f| %>
  <%= render partial: 'shared/error_messages', locals: { obj: @user } %>  <!--obj エラーを呼び出す_error_messages.html.erb-->
<!-- render partial:メゾット　（共通化することで、繰り返し書くコードを１回で済ませる-->
  <%= f.label :name, class: "label-form" %>
  <%= f.text_field :name, class: "form-control" %>

  <%= f.label :email, class: "label-form" %>
  <%= f.email_field :email, class: "form-control" %>

  <%= f.label :password, class: "label-form" %>
  <%= f.password_field :password, class: "form-control" %>

  <!--< %= f.label :password_confirmation, class: "label-form" %>-->
  <%= f.label :password_confirmation, class: "label-#{yield(:class_text)}" %>
  <%= f.password_field :password_confirmation, class: "form-control" %>

  <%= f.submit yield(:btn_text), class: "btn btn-primary btn-block btn-form" %>
<% end %>