<% provide(:title, "Top") %>

<div class="row">
  <div class="col-md-7">
    <div class="center jumbotron" id="top-main"> <!--中央寄せ-->
      <h1 id="top-main-title">MAYU★TaskApp</h1>
      <p>TaskAppは簡易ToDo管理ツールです。</p>
      <p>↓↓初めてのご利用↓↓</p>
      
        <%= link_to "アカウント作成", signup_path, class: "btn btn-lg btn-success" %>　<!--<a class="btn btn-lg btn-success" href="/signup">アカウント作成</a> HTMLでは↓型が変わる-->
      
      <div style="margin-top: 10px;">
        <%= link_to "ゲストログイン（管理権限）", signup_path, class: "btn btn-danger" %> <!-- signup_path 後で直す -->
        <%= link_to "ゲストログイン（一般権限）", login_path, class: "btn btn-warning" %> <!-- login_path 後で直す -->
       </div>
     </div>
  </div>


<div class="col-md-4">
    <h1>ログイン</h1>
    <form action="/login" accept-charset="UTF-8" method="post"><input name="utf8" type="hidden" value="✓"><input type="hidden" name="authenticity_token" value="w5k+8GojLdzBFzMmFmeZqsIDxlfiIngtdjsb1V+jAX+JeLuaBPsNry/TLyx62rkAFSxinc39Rj0rdg7RRN577g==">

     <%= form_with(scope: :session, url: login_path, local: true) do |f| %>
      <% if logged_in? %>
        <%= f.label :email, t("sessions.new.email"), class: "label-form" %>
        <%= f.email_field :email, class: 'form-control', readonly: true %>
  
        <%= f.label :password, t("sessions.new.password"), class: "label-form" %>
        <%= f.password_field :password, class: 'form-control', readonly: true %>
        
        <%= f.submit "ログイン状態です", class: "btn btn-primary btn-block btn-form", disabled: "disabled" %>
      <% else %>
        <%= f.label :email, t("sessions.new.email"), class: "label-form" %>
        <%= f.email_field :email, class: 'form-control' %>
  
        <%= f.label :password, t("sessions.new.password"), class: "label-form" %>
        <%= f.password_field :password, class: 'form-control' %>
        
        <%= f.label :remember_me, class: "checkbox inline checkbox-login", for: "remember-me" do %>
          <%= f.check_box :remember_me, id: "remember-me" %>
          <span>ログイン情報を記憶する</span>
        <% end %>
        
        <%= f.submit "ログイン", class: "btn btn-primary btn-block btn-form" %>
      <% end %>
    <% end %>
  </div>
</div>


